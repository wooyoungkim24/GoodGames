

extends layout.pug

include utils.pug

block content
  +validationErrorSummary(errors)
  form(class='log-in-form' action='/sign-up' method='post')
    input(type='hidden' name='_csrf' value=csrfToken)
    +field('Username', 'username', username)
    +field('Password', 'password', null, password)
    +field('Confirm Password', 'confirmedPassword', null, confirmedPassword)
    div
      button(type='submit') Sign Up
      a(href='/') Cancel


