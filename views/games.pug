    div(class="games-container")
        each game in games
            div(id= game.title)
                div(class="imageDiv")
                    img(src= game.imgLink class="game-image")
                div(class="title") #{game.title}
                div(class="description") #{game.description}
                div(class="pub") #{game.publisher}
                div(class="yOR") #{game.yearOfRelease}



